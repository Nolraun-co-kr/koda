                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
        $(function(){
          $('.areaView .view button').on('click', function(e){
            e.preventDefault();
            $(this).toggleClass('active')
            $(this).parents('.table').find('table').toggleClass('active');
          })

          $('.areatab a').on('click', function(e){
            e.preventDefault();
            var value = $(this).data('id');
            $('.areatab a').removeClass('active');
            $(this).addClass('active');
            $('.areaView .view').hide();
            $('.areaView .view.view' + value).stop().fadeIn();
          })
        })
    </script>
{% endblock %}
